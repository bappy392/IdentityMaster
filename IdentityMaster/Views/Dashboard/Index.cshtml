
@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-info">Dasboard</h1>


@section Styles{
    .sidenav {
    width: 200px;
    position: fixed;
    z-index: 1;
    top: 150px;
    left: 10px;
    background: #eee;
    overflow-x: hidden;
    padding: 8px 0;
    }
    .sidenav a {
    padding: 6px 8px 6px 16px;
    text-decoration: none;
    font-size: 25px;
    color: #2196F3;
    display: block;
    }
    .sidenav a:hover {
    color: #064579;
    }
    .main {
    margin-left: 140px; /* Same width as the sidebar + left position in px */
    font-size: 28px; /* Increased text to enable scrolling */
    padding: 0px 50px;
    }
}

<div class="sidenav">
    <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
    <a asp-controller="UserSystem" asp-action="Index">User List</a>
    <a asp-controller="RoleVMs" asp-action="Index">Add Role</a>
    <a asp-controller="Access" asp-action="Index">Access Permission</a>
</div>